{
  "manifest_version": 3,
  "name": "비즈니스 커뮤니케이션 어시스턴트",
  "version": "2.3.0",
  "description": "정중한 문장 변환 기능을 제공하는 지능형 커뮤니케이션 도구입니다.",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "BCA - 톤 변환 및 번역"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-oHOfSDT8.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "css": [
        "assets/global-BEE7ePxs.css"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Command+Shift+Y"
      },
      "description": "BCA 팝업 열기 (클립보드 톤 변환)"
    },
    "tone-conversion": {
      "description": "클립보드 텍스트를 정중한 문장으로 변환 (팝업)"
    },
    "instant-tone-conversion": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "선택한 텍스트 즉시 정중한 문장 변환"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/*.js",
        "assets/*.css",
        "assets/index.ts-vseXkJzW.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
